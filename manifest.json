{
    "name": "Steam link filter bypasser",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "Bypass annoying Steam link filter",
    "homepage_url": "http://github.com/iamncla",
    "background": {
        "scripts": [
            "src/bg/background.js"
        ],
        "persistent": true
    },
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "*://steamcommunity.com/linkfilter/?url=*"
    ]
}